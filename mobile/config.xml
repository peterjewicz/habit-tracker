<?xml version='1.0' encoding='utf-8'?>
<widget id="com.totalwebconnections.dailyhabittracker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Daily Habit Tracker</name>
    <description>
        App to track and build daily habits
    </description>
    <author email="info@totalwebconnections.com" href="http://www.totalwebconnections.com">
        Total Web Connections
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-admobpro" spec="^2.35.3" />
    <engine name="ios" spec="^4.5.5" />
</widget>
